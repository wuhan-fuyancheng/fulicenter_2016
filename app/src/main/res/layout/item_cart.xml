<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="6dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#fef"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp"
    android:background="@color/white"
    android:id="@+id/layout_item_cart"
    >
    <ImageView
        android:id="@+id/iv_cart_delete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="7dp"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@mipmap/deleteee"
        />
    <CheckBox
        android:id="@+id/iv_cart_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        style="@style/CustomCheckboxTheme"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/iv_cart_goodsimg"
        android:layout_toRightOf="@id/iv_cart_check"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/nopic"
        android:layout_width="50dp"
        android:layout_height="50dp"

        />
    <RelativeLayout
        android:id="@+id/layout_num"
        android:layout_toRightOf="@id/iv_cart_goodsimg"
        android:layout_width="180dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_cart_goodsname"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/orange"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_cart_goodsname"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_cart_add"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_cart"
                />
            <TextView
                android:id="@+id/tv_cart_num"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                />
            <ImageView
                android:id="@+id/tv_cart_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/del_cart"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_cart_goodsprice"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/google_yellow"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>
    </android.support.v7.widget.CardView>