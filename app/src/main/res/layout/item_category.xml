<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="5dp"
    android:background="@color/fragment_bg"
    android:id="@+id/layout_item_cate"
    android:layout_marginTop="10dp"
    >
    <ImageView
        android:id="@+id/iv_cate_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/menu_item_boutique_normal"
        />
    <TextView
        android:id="@+id/tv_cate_name"
        android:layout_toRightOf="@id/iv_cate_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:layout_gravity="center_vertical"
        android:text="名称"
        />
    <ImageView
        android:id="@+id/iv_cate_xiala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrow2_down"
        />

</RelativeLayout>