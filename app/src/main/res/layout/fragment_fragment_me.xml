<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray_light"
    tools:context="com.example.administrator.fulicenter_2016.fragment.FragmentMe">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@color/orange"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/im_me_icon_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/tb_icon_more_msg_white_56"
                />
            <TextView
                android:id="@+id/tv_me_setup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/im_me_icon_more"
                android:layout_marginRight="20dp"
                android:text="设置"
                android:textSize="24sp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
        <ImageView
            android:id="@+id/iv_me_avaterimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/contactlogo"
            />
        <TextView
            android:id="@+id/tv_me_nick"
            android:layout_toRightOf="@id/iv_me_avaterimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            />
            <ImageView
                android:layout_toRightOf="@id/tv_me_nick"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:src="@drawable/tb_icon_home_qrcode_normal"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/layout_l1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_me_cart_baby_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="24sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_me_cart_baby"
                    android:layout_below="@id/tv_me_cart_baby_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏的宝贝"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
                <View
                    android:layout_width="2dip"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_l2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_me_cart_shape_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textSize="24sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_me_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_me_cart_shape_num"
                    android:text="收藏的店铺"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
                <View
                    android:layout_width="2dip"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_l3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_me_cart_myfoot_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textSize="24sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_me_myfoot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_me_cart_myfoot_num"
                    android:text="我的足迹"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/layout_myorder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/tv_me_myorder_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="查看全部已购买的宝贝"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_me_myorder_right"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="2dip"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/order_list1"
                android:src="@drawable/order_list1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/order_list2"
                android:src="@drawable/order_list2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/order_list3"
                android:src="@drawable/order_list3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/order_list4"
                android:src="@drawable/order_list4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/order_list5"
                android:src="@drawable/order_list5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_mycard"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的卡券包"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/layout_me_shenghuo"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/tv_me_center1"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/center_card_coupon1"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/tv_me_center1"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活券"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_me_wangdian"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/tv_me_center2"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/center_card_coupon2"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/tv_me_center2"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网店券"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/right2"
                />
            <TextView
                android:id="@+id/tv_me_wangdian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无可用优惠券"
                android:layout_toLeftOf="@id/right2"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_me_huiyuan"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/tv_me_center3"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/center_card_coupon3"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/tv_me_center3"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员卡"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/right1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一卡在手，逛店无忧"
                android:layout_toLeftOf="@id/right1"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
